


<MyButton@Button>:
    font_size: 20

<Interface>:
    orientation: 'vertical'
    padding: 5
    spacing: 3
    screen: screen

    TextInput:
        id: screen
        hint_text: '0'
        size_hint: 1, .6
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        multiline: False
        font_size: '40sp'
        readonly: True
        background_color: [1, 1, 1, .8]

    GridLayout:
        cols: 5
        spacing: 2

        MyButton:
            text: '7'
            on_press: root.calc(instance = self)
        MyButton:
            text: '8'
            on_press: root.calc(instance = self)
        MyButton:
            text: '9'
            on_press: root.calc(instance = self)
        MyButton:
            text: '+'
            on_press: root.calc(instance = self)
        MyButton:
            text: 'C'
            on_press: root.calc(instance = self)

        MyButton:
            text: '4'
            on_press: root.calc(instance = self)
        MyButton:
            text: '5'
            on_press: root.calc(instance = self)
        MyButton:
            text: '6'
            on_press: root.calc(instance = self)
        MyButton:
            text: '-'
            on_press: root.calc(instance = self)
        MyButton:
            text: '('
            on_press: root.calc(instance = self)

        MyButton:
            text: '1'
            on_press: root.calc(instance = self)
        MyButton:
            text: '2'
            on_press: root.calc(instance = self)
        MyButton:
            text: '3'
            on_press: root.calc(instance = self)
        MyButton:
            text: '*'
            on_press: root.calc(instance = self)
        MyButton:
            text: ')'
            on_press: root.calc(instance = self)

        MyButton:
            text: '0'
            on_press: root.calc(instance = self)
        MyButton:
            text: '.'
            on_press: root.calc(instance = self)
        MyButton:
